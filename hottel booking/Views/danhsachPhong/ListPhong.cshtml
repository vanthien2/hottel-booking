@model IEnumerable<hottel_booking.Models.Phong>
@{
    ViewBag.Title = "ListPhong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>THÔNG TIN PHONG</h2>
<p>
    @Html.ActionLink("Tao Moi", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã Phòng </th>
        <th> Số Phòng</th>
        <th> Giá Phòng</th>
        <th> Mã Loại Phòng </th>
        <th> Mã Trạng Thái Phòng</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.maPhong)</td>
            <td>@Html.DisplayFor(modelItem => item.soPhong)</td>
            <td>@Html.DisplayFor(modelItem => item.giaPhong)</td>
            <td>@Html.DisplayFor(modelItem => item.maloaiPhong)</td>
            <td>@Html.DisplayFor(modelItem => item.matrangthaiPhong)</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.maPhong }) |
                @Html.ActionLink("Chi Tiết", "Detail", new { id = item.maPhong }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.maPhong })
            </td>
        </tr>
    }
</table>